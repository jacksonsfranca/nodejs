  <!doctype html>
  <html lang="en">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="description" content="">
      <meta name="author" content="">

      <title>Mural J3TH</title>

      <!-- Bootstrap core CSS -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/css/bootstrap.min.css" rel="stylesheet">
      <style>
        body {
          padding-top:5rem;
        }
        .starter-template{
          padding: 3rem 1.5rem;
          text-align: center;
        }
        .mensagem {
          background: #f3f3f7;
          text-align: justify;
          padding: 11px;
          border: 1px solid #5f84d0;
        }
        .mensagem .usuario {
          background: #f3f3f7;
          padding: 5px;
          border: 1px solid #d6d6d8;
        }
        .mensagem .data {
          border: 1px solid #d6d6d8;
          background: #f3f3f7;
          padding: 5px;
          float: right;
        }
        .formulario {
          text-align: justify;
        }
      </style>
    </head>

    <body>

      <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/">Mural</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
          <ul class="navbar-nav mr-auto">
            <% if(usuarioAtual) { %>
              <li class="nav-item active">
                <a class="nav-link" href="/msg/nova">Novo Aviso</a>
              </li>
            <% } %>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <% if(!usuarioAtual) { %>
            <a class="btn btn-success" href="/entrar">Entrar</a>
            <a class="btn btn-warning" href="/registrar">Registrar</a>
            <% } else {%>
            <a style="color: #FFF">Bem Vindo <%= usuarioAtual.username %> &nbsp;</a>
            <a class="btn btn-warning" href="/sair">Sair</a>
            <% }%>
          </form>

        </div>
      </nav>

      <main role="main" class="container">

        <div class="starter-template">
          <h1>Criar aviso</h1>

          <form class="formulario" action="/msg" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Nome Completo</label>
              <input class="form-control" name="nomeCompleto" placeholder="Nome Completo">
            </div>
            
            <div class="form-group">
              <label>Mensagem</label>
              <textarea class="form-control" name="mensagem" placeholder="Mensagem"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>
        </div>
      </main><!-- /.container -->


      <!-- Bootstrap core JavaScript
      ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="../../../../assets/js/vendor/popper.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
    </body>
  </html>